{
  "name": "saxon-scout",
  "version": "1.0.0",
  "description": "A local-first scouting platform for FRC events",
  "type": "module",
  "scripts": {
    "setup": "node scripts/setup-env.js",
    "dev": "concurrently \"npm:build:app:watch\" \"npm:build:server:watch\" \"npm:server:dev\"",
    "build": "npm run clean && npm run build:server && npm run build:app",
    "build:server": "tsc -p server/tsconfig.json",
    "build:server:watch": "tsc -p server/tsconfig.json --watch --preserveWatchOutput",
    "build:app": "node scripts/build-app.js",
    "build:app:watch": "node scripts/build-app.js --dev",
    "clean": "node scripts/clean.js",
    "start": "node dist/server/server.js",
    "server:dev": "node --watch dist/server/server.js",
    "serve-app": "node server/test-server.js",
    "test": "node server/test-server.js",
    "lint": "eslint app/src server/src --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:unit": "jest --runInBand",
    "kill-servers": "powershell -ExecutionPolicy Bypass -File scripts/kill-servers.ps1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@google/genai": "^1.25.0",
    "@heroicons/react": "^2.2.0",
    "@types/react-icons": "^2.2.7",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "chart.js": "^4.4.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.8.0",
    "react-toastify": "^10.0.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.22",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/testing-library__react": "^10.0.1",
    "bootstrap": "^5.3.8",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.3.3"
  }
}
